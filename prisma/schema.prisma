// IMPORTANT: After changing relation names, run 'npx prisma generate' locally
// (and 'npx prisma db push' if needed) before committing to regenerate the client.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CuratedListing {
  id             String         @id
  productId      String
  storeName      String
  url            String
  price          Float
  currency       String
  shippingCost   Float?
  countryCode    String?
  CuratedProduct CuratedProduct @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model CuratedProduct {
  id              String           @id
  name            String
  category        String
  imageUrl        String?
  description     String?
  defaultPrice    Float?
  defaultCurrency String           @default("USD")
  createdAt       DateTime         @default(now())
  curatedListings  CuratedListing[]
}

model Favorite {
  id        String   @id
  userId    String
  productId String
  createdAt DateTime @default(now())
  Product   Product  @relation(fields: [productId], references: [id])

  @@unique([userId, productId])
  @@index([productId])
  @@index([userId])
}

model Listing {
  id                    String        @id
  productId             String
  storeName             String
  storeLogoUrl          String?
  url                   String?
  imageUrl              String?
  price                 Float
  priceCents            Int?
  currency              String        @default("USD")
  shippingCost          Float?
  deliveryTimeDays      Int?
  fastDelivery          Boolean?
  isFastDelivery        Boolean?
  estimatedDeliveryDays Int?
  deliveryDays          Int?
  location              String?
  inStock               Boolean       @default(true)
  rating                Float?
  reviewCount           Int?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  countryCode           String?
  affiliateProgram      String?
  affiliateProvider     String?
  merchantOriginalId    String?
  source                ListingSource @default(seed)
  priceLastSeenAt       DateTime?     @db.Timestamptz(6)
  Product               Product       @relation(fields: [productId], references: [id], onDelete: Cascade)
  merchantId            String?
  merchant              Merchant?     @relation(fields: [merchantId], references: [id])
  merchantFeedId        String?
  merchantFeed          MerchantFeed? @relation(fields: [merchantFeedId], references: [id])

  @@index([merchantId])
  @@index([merchantFeedId])
}

model Product {
  id                  String                @id
  name                String
  displayName         String?
  description         String?
  category            String?
  primaryCategory     String?
  brand               String?
  imageUrl            String?
  thumbnailUrl        String?
  createdAt           DateTime              @default(now())
  updatedAt           DateTime              @updatedAt
  gtin                String?
  source              String?
  externalId          String?
  Favorite            Favorite[]
  listings             Listing[]
  ProductPriceHistory ProductPriceHistory[]
}

model ProductPriceHistory {
  id        String   @id
  productId String
  date      DateTime
  price     Float
  currency  String   @default("USD")
  storeName String?
  Product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model SavedSearch {
  id        String   @id
  userId    String
  query     String
  filters   Json?
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([userId])
}

model SearchLog {
  id          String   @id
  query       String
  resultCount Int
  createdAt   DateTime @default(now())
}

model Merchant {
  id          String   @id
  storeName   String
  name        String?
  website     String?
  domain      String?
  logoUrl     String?
  country     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       MerchantUser[]
  feedRuns    MerchantFeedRun[]
  feeds       MerchantFeed[]
  listings    Listing[]
}

model MerchantFeed {
  id          String   @id
  merchantId  String
  merchant    Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  name        String
  sourceType  String   // e.g. 'csv', 'affiliate-api', 'manual'
  sourceSlug  String   // e.g. 'profitshare', 'twoPerformant'
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  listings    Listing[]
}

model MerchantUser {
  id          String   @id
  merchantId  String
  email       String   @unique
  passwordHash String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  merchant    Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@index([email])
}

model MerchantFeedRun {
  id          String   @id
  merchantId  String
  filename    String?
  status      String   @default("processing")
  rowsTotal   Int?
  rowsSuccess Int?
  rowsError   Int?
  errorLog    String?
  createdAt   DateTime @default(now())
  completedAt DateTime?
  merchant    Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@index([merchantId])
  @@index([createdAt])
}

enum ListingSource {
  manual
  sheet
  seed
  affiliate
}
