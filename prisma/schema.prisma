// Prisma datasource is now PostgreSQL (Supabase).
// Uses the DATABASE_URL environment variable.

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id           String                @id @default(cuid())
  name         String
  displayName  String?
  description  String?
  category     String?
  brand        String?
  imageUrl     String?
  thumbnailUrl String?
  createdAt    DateTime              @default(now())
  updatedAt    DateTime              @updatedAt

  listings     Listing[]
  priceHistory ProductPriceHistory[]
  favorites    Favorite[]
}

model Listing {
  id                    String   @id @default(cuid())
  product               Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId             String

  storeName             String
  storeLogoUrl          String?
  url                   String?
  imageUrl              String?
  price                 Float
  priceCents            Int?
  currency              String   @default("USD")
  shippingCost          Float?
  deliveryTimeDays      Int?
  fastDelivery          Boolean?
  isFastDelivery        Boolean?
  estimatedDeliveryDays Int?
  deliveryDays          Int?
  location              String?
  countryCode           String? // ISO 3166-1 alpha-2, e.g. "US", "RO", "DE"
  inStock               Boolean  @default(true)
  rating                Float?
  reviewCount           Int?

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model ProductPriceHistory {
  id        String   @id @default(cuid())
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String

  date      DateTime
  price     Float
  currency  String   @default("USD")
  storeName String?
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([productId])
  @@unique([userId, productId])
}

model SavedSearch {
  id        String   @id @default(cuid())
  userId    String
  query     String
  filters   Json?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}

model CuratedProduct {
  id              String           @id
  name            String
  category        String
  imageUrl        String?
  description     String?
  defaultPrice    Float?
  defaultCurrency String           @default("USD")
  createdAt       DateTime         @default(now())

  listings        CuratedListing[]
}

model CuratedListing {
  id         String         @id @default(cuid())
  product    CuratedProduct @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId  String

  storeName  String
  url        String
  price      Float
  currency   String
  shippingCost Float?
  countryCode String? // ISO 3166-1 alpha-2, e.g. "US", "RO", "DE"
}

model SearchLog {
  id          String   @id @default(cuid())
  query       String
  resultCount Int
  createdAt   DateTime @default(now())
}